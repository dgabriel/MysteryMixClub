# MySQL Configuration for Low Memory Environments (1GB RAM Droplet)
# Optimized for ~512MB MySQL allocation

[mysqld]
# Basic Settings
skip-name-resolve
skip-host-cache

# Memory Settings - Aggressively tuned for low memory
key_buffer_size = 8M
max_allowed_packet = 16M
thread_stack = 192K
thread_cache_size = 8
max_connections = 50

# InnoDB Settings - Minimal configuration
innodb_buffer_pool_size = 128M
innodb_log_file_size = 32M
innodb_log_buffer_size = 4M
innodb_flush_method = O_DIRECT
innodb_flush_log_at_trx_commit = 2

# Table Settings
table_open_cache = 64
open_files_limit = 256

# Temp Tables
tmp_table_size = 8M
max_heap_table_size = 8M

# Binary Logging (disabled for memory savings)
skip-log-bin

# Performance Schema (disabled)
performance_schema = OFF

# Slow Query Log (optional, disabled for performance)
slow_query_log = 0

# Character Set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
